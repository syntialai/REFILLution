<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.Refillution.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">@dimen/dp_16</item>
    </style>

    <style name="Widget.Refillution.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/dp_16</item>
        <item name="cardElevation">@dimen/dp_4</item>
        <item name="android:stateListAnimator">@animator/m3_card_elevated_state_list_anim</item>
        <item name="strokeWidth">@dimen/dp_0</item>
    </style>

    <style name="Widget.Refillution.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>

    <style name="Widget.Refillution.Button.Tertiary" parent="Widget.Refillution.Button">
        <item name="backgroundTint">?attr/colorTertiary</item>
    </style>

    <style name="Widget.Refillution.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>

    <style name="Widget.Refillution.Button.Outlined.Tertiary" parent="Widget.Refillution.Button.Outlined">
        <item name="android:textColor">?attr/colorTertiary</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.Refillution.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checkable">true</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:stateListAnimator">@animator/m3_chip_state_list_anim</item>
    </style>

    <style name="Widget.Refillution.FloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Tertiary">
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="iconTint">?attr/colorTertiary</item>
    </style>

    <style name="Widget.Refillution.Ticker" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/dp_16</item>
        <item name="cardElevation">@dimen/dp_4</item>
    </style>

    <style name="Widget.Refillution.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="android:elevation">@dimen/dp_4</item>
    </style>

    <style name="Widget.Refillution.Toolbar.Transparent" parent="Widget.Refillution.Toolbar">
        <item name="android:background">@color/transparent_00000000</item>
    </style>

    <style name="Widget.Refillution.Toolbar.Transparent.OnPrimary" parent="Widget.Refillution.Toolbar.Transparent">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIcon">@drawable/ic_back_white</item>
    </style>
</resources>